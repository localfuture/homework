<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <title>Books</title>
</head>

<body>
  <!-- navigation barf -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Books</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbaritem">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbaritem">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/">Add Books</a>
        <a class="nav-item nav-link" href="/viewBooks">View Books</a>
      </div>
    </div>
  </nav>

  <!-- add books form -->
  <div class="card mx-auto my-4" style="width: 50rem;">
    <div class="card-header">
      <h1>Add Books</h1>
    </div>
    <div class="card-body">
      <form>
        <div class="form-row">
          <div class="form-group col-md-3">
            <label>Title</label>
          </div>
          <div class="form-group col-md-5">
            <input type="text" class="form-control">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-3">
            <label>Author</label>
          </div>
          <div class="form-group col-md-5">
            <input type="text" class="form-control">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-3">
            <label>Publisher</label>
          </div>
          <div class="form-group col-md-5">
            <input type="text" class="form-control">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-3">
            <label>Published Date</label>
          </div>
          <div class="form-group col-md-5">
            <input type="text" class="form-control">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-3">
            <label>Distributor Name</label>
          </div>
          <div class="form-group col-md-5">
            <input type="text" class="form-control">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-3">
            <label>Price</label>
          </div>
          <div class="form-group col-md-5">
            <input type="text" class="form-control">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-3">
            <label>Description</label>
          </div>
          <div class="form-group col-md-5">
            <input type="text" class="form-control">
          </div>
        </div>
          <button class="btn btn-primary" type="submit" name="button">Submit</button>
      </form>

    </div>
  </div>


  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>

</html>
